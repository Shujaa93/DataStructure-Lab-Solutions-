#include <iostream>
using namespace std;

int generateCode(int n) {
    if (n == 0) return 1;
    return n * generateCode(n - 1);
}

int main() {
    int (*codePtr)(int);
    codePtr = &generateCode;

    int num;
    cout << "Enter a number: ";
    if (!(cin >> num)) return 0;

    int secretCode = codePtr(num);
    cout << "Your secret code is: " << secretCode << endl;
    return 0;
}
